            <groupId>cn.ibenbeni</groupId>
            <artifactId>security-sdk-captcha</artifactId>
            <version>${revision}</version>
        </dependency>

        <!--缓存，可选依赖-->
        <dependency>
            <groupId>cn.ibenbeni</groupId>
            <artifactId>cache-sdk-memory</artifactId>
            <version>${revision}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>cn.ibenbeni</groupId>
            <artifactId>cache-sdk-redis</artifactId>
            <version>${revision}</version>
            <optional>true</optional>
